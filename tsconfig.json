{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "build",
    "lib": ["es6", "dom"],
    "downlevelIteration": true
  },
  "compileOnSave": true,
  "exclude": ["test", "typings", "benchmark"]
}
